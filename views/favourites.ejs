    rel="stylesheet">

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/favouritesList.js"></script>
  <style>img{ max-width: 25% }</style>
  <title>Favourites</title>
</head>
<body>

  <header>
    <%- include('partials/_header') %>
  </header>

  <div id="favourites-page">

    <h1 id="favourites-page-title">Saved Books</h1>

    <section>
      <% for (let favourite of favourites) { %>
        <div id="favourites-container" data-product="<%= favourite.product_id %>">
          <div id="favourites-book-name"><%= favourite.title %></div>
          <img src="<%= favourite.picture_url %>" alt="Product Image">

          <div>
            <div class="fav-nunito-font">$ <%= favourite.dollar %></div>
            <div class="fav-nunito-font">Condition: <%= favourite.condition %></div>
            <div class="fav-nunito-font">Category:<%= favourite.category %></div>
          </div>

          <form method="post" action="/favourites/remove">
            <input name="product_id" value="<%= favourite.product_id %>" hidden>
            <button id="remove-fav-button" type="submit">Remove</button>
          </form>
        </div>
        <% } %>
    </section>
  </div>

</body>
</html>