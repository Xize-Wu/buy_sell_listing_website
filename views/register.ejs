<body>
  <%- include('partials/_header') %>

  <div class="register-container">
    <h2 id="create-account">Create An Account</h2>
    <form method="POST" action="/register">

      <div class="form-group">
        <label>Name:</label>
        <input type="text" name="name" id="name" placeholder="Enter name" required>
      </div>

      <div class="form-group">
        <label name="email">Email:</label>
        <input type="email" name="email" id="email" placeholder="Please enter your email" required>
      </div>

      <div class="form-group">
        <label name="password">Password:</label>
        <input type="password" name="password" id="password" placeholder="Please enter a password" required>
      </div>

      <div id="register-button">
        <button type="submit">Register</button>
      </div>
      <div>Have an account already? <a href="/login">Login here</a></div>
    </form>
  </div>
</body>

