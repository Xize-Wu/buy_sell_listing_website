<body class="container">

  <header>

  </header>
  <main>
    <div id ="main-picture">
    <img alt = "main picture for the book on sale" src = <%= pictureUrl %>>
    </div>
    <section class="main-properties">
      <div id ="item-title"><%= title %></div>
      <div id ="item-price"><%= price %> </div>
      <div id ="seller"><%= seller %></div>
      <div class = "button" id ="message-button"><button type="submit">Message Me</button></div>

      <div class ="button" id="purchase-button">
        <form method="post" action = "/cart">
          <input name="product_id" value="<%= id %>" hidden>
          <button type="submit">Buy Now</button>
        </form>
      </div>

    </section>
    <section class="description">
    <div id="description">
      <%= description %>
    </div>

    <div class="minor-properties">
      <table>
        <tr class = "condition">
          <td> <%= condition %></td>
        </tr>
        <tr class = "category">
          <td><%= category %></td>
        </tr>
        <!-- <tr class = "stock">
          <td>1 available</td>
        </tr> -->
      </table>
    </div>
    </section>
    </main>

