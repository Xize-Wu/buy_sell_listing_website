<body>
  <%- include('partials/_header') %>

    <main id="main-content">

      <div>
        <h1 id="listings-page">New Listing</h1>
      </div>
      <form action="/my_listing_form" method="post">
        <div class="book_title">
          <label for="title">Title:</label>
          <input type="text" name="title" id="title" required>
        </div>
        
        <div class="book_description">
          <label for="description">Description:</label>
          <textarea name="description" id="description" required></textarea>
        </div>
        <div class="book_price">
          <label for="price">Price:</label>
          <input type="number" name="price" id="price" required>
        </div>
        <div class="book_image">
          <label for="image">Image Link:</label>
          <textarea name="image" id="image" required></textarea>
        </div>
        <div class="book_image1">
          <label for="thumbnail_image">Thumbnail :</label>
          <textarea name="thumbnail_image" id="thumbnail_image" required></textarea>
        </div>
        <div class="book_condition">
          <label for="condition">Condition:</label>
          <input type="text" name="bookcondition" id="condition" required>
        </div>
        <div class="book_category">
          <label for="category">Category:</label>
          <input type="text" name="bookcategory" id="category" required>
        </div>
        <div class="button">
          <button type="submit" id="submit">Submit</button>
          <button type="submit" id="cancel">Cancel</button>
        </div>
      </form>
    </main>

</body>

</html>